{
  "name": "backend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -b tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/api/docs && cp src/modules/api/docs/swagger.yaml dist/modules/api/docs/",
    "start": "node .",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --runInBand",
    "test:cov": "jest --runInBand --coverage"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@newrelic/mysql": "^6.1.0",
    "axios": "^1.6.7",
    "bullmq": "^5.1.5",
    "cheerio": "^1.0.0-rc.12",
    "cron": "^3.1.6",
    "dotenv": "^16.4.1",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.2",
    "mysql2": "^3.9.0",
    "newrelic": "^11.10.1",
    "node-cache": "^5.1.2",
    "pino": "^8.17.2",
    "reflect-metadata": "^0.2.1",
    "telegraf": "^4.15.3",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@packages/testing": "workspace:*",
    "@packages/types": "workspace:*",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/newrelic": "^9.14.3",
    "@types/node": "^18.16.8",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
