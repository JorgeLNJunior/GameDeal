{
  "name": "backend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/api/docs && cp src/modules/api/docs/swagger.yaml dist/modules/api/docs/",
    "start": "node .",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --runInBand",
    "test:cov": "jest --runInBand --coverage"
  },
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/swagger": "^8.8.0",
    "@fastify/swagger-ui": "^1.9.2",
    "@newrelic/mysql": "^6.1.0",
    "axios": "^1.4.0",
    "bullmq": "^4.2.0",
    "cheerio": "^1.0.0-rc.12",
    "cron": "^2.3.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.19.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "kysely": "^0.25.0",
    "mysql2": "^3.5.0",
    "newrelic": "^10.4.0",
    "pino": "^8.14.1",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.12.2",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@shared/types": "workspace:*",
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/newrelic": "^9.14.0",
    "@types/node": "^18.16.8",
    "jest": "^29.6.1",
    "pino-pretty": "^10.0.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
