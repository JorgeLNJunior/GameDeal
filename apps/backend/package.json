{
  "name": "backend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -b tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/api/docs && cp src/modules/api/docs/swagger.yaml dist/modules/api/docs/",
    "start": "node .",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --runInBand",
    "test:cov": "jest --runInBand --coverage"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@newrelic/mysql": "^6.1.0",
    "axios": "^1.7.9",
    "bullmq": "^5.40.2",
    "cheerio": "^1.0.0",
    "cron": "^3.5.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "mysql2": "^3.12.0",
    "newrelic": "^12.12.0",
    "node-cache": "^5.1.2",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "telegraf": "^4.16.3",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@packages/testing": "workspace:*",
    "@packages/types": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/newrelic": "^9.14.7",
    "@types/node": "^22.13.1",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
