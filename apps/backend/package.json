{
  "name": "backend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/api/docs && cp src/modules/api/docs/swagger.yaml dist/modules/api/docs/",
    "start": "node .",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --runInBand",
    "test:cov": "jest --runInBand --coverage"
  },
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.10.1",
    "@fastify/swagger-ui": "^1.9.3",
    "@newrelic/mysql": "^6.1.0",
    "axios": "^1.5.1",
    "bullmq": "^4.11.4",
    "cheerio": "^1.0.0-rc.12",
    "cron": "^2.4.4",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.26.3",
    "mysql2": "^3.6.1",
    "newrelic": "^11.1.0",
    "node-cache": "^5.1.2",
    "pino": "^8.15.1",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.14.0",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@packages/types": "workspace:*",
    "@packages/testing": "workspace:*",
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/newrelic": "^9.14.1",
    "@types/node": "^18.16.8",
    "jest": "^29.7.0",
    "pino-pretty": "^10.2.0",
    "rimraf": "^5.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
