{
  "name": "backend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -b tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/api/docs && cp src/modules/api/docs/swagger.yaml dist/modules/api/docs/",
    "start": "node .",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --runInBand",
    "test:cov": "jest --runInBand --coverage"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@newrelic/mysql": "^6.1.0",
    "axios": "^1.8.4",
    "bullmq": "^5.49.1",
    "cheerio": "^1.0.0",
    "cron": "^4.3.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.1",
    "mysql2": "^3.14.0",
    "newrelic": "^12.18.0",
    "node-cache": "^5.1.2",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "telegraf": "^4.16.3",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@packages/testing": "workspace:*",
    "@packages/types": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^22.14.1",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
