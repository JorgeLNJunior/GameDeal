{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@dependencies/*": [
        "src/dependencies/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@cron/*": [
        "src/modules/cron/*"
      ],
      "@database/*": [
        "src/modules/database/*"
      ],
      "@http/*": [
        "src/modules/http/*"
      ],
      "@infra/*": [
        "src/modules/infra/*"
      ],
      "@queue/*": [
        "src/modules/queue/*"
      ],
      "@scrapers/*": [
        "src/modules/scrapers/*"
      ],
      "@localtypes/*": [
        "src/types/*"
      ],
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
}