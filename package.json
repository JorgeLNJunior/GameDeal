{
  "name": "game-price-tracker",
  "author": "JorgeLNJunior",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=backend --log-prefix=none",
    "start:dev": "turbo run dev",
    "start:dev:backend": "turbo run dev --filter=backend --log-prefix=none",
    "start:watch": "turbo run start:watch",
    "start:watch:backend": "turbo run start:watch --filter=backend --log-prefix=none",
    "lint": "turbo run lint",
    "lint:backend": "turbo run lint --filter=backend",
    "lint:fix": "turbo run lint:fix",
    "lint:fix:backend": "turbo run lint:fix --filter=backend --log-prefix=none",
    "test": "turbo run test",
    "test:backend": "turbo run test --filter=backend",
    "test:cov": "turbo run test:cov",
    "test:cov:backend": "turbo run test:cov --filter=backend --log-prefix=none",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@turbo/gen": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "turbo": "^1.9.7"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JorgeLNJunior/game-price-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/JorgeLNJunior/game-price-tracker/issues"
  },
  "homepage": "https://github.com/JorgeLNJunior/game-price-tracker#readme"
}
