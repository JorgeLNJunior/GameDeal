{
  "name": "game-price-tracker",
  "version": "0.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/api/docs && cp src/modules/api/docs/swagger.yaml dist/modules/api/docs/",
    "start": "node .",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src",
    "test": "jest --runInBand",
    "test:cov": "npm test -- --coverage",
    "prepare": "husky install",
    "release": "release-it --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JorgeLNJunior/game-price-tracker.git"
  },
  "author": "JorgeLNJunior",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JorgeLNJunior/game-price-tracker/issues"
  },
  "homepage": "https://github.com/JorgeLNJunior/game-price-tracker#readme",
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/swagger": "^8.5.1",
    "@fastify/swagger-ui": "^1.8.1",
    "axios": "^1.4.0",
    "bullmq": "^3.14.1",
    "cheerio": "^1.0.0-rc.12",
    "cron": "^2.3.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.17.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "kysely": "^0.25.0",
    "mysql2": "^3.3.3",
    "newrelic": "^10.1.2",
    "pino": "^8.14.1",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.12.2",
    "tsyringe": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/newrelic": "^9.14.0",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "pino-pretty": "^10.0.0",
    "prettier": "2.8.8",
    "release-it": "^15.10.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
