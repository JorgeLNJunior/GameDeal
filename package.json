{
  "name": "game-price-alert",
  "version": "0.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "PLAYWRIGHT_BROWSERS_PATH=browsers npx playwright install chromium",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "postbuild": "mkdir dist/modules/http/docs && cp src/modules/http/docs/swagger.yaml dist/modules/http/docs/",
    "start": "PLAYWRIGHT_BROWSERS_PATH=browsers node .",
    "start:dev": "PLAYWRIGHT_BROWSERS_PATH=browsers ts-node -r tsconfig-paths/register src/main.ts | pino-pretty",
    "start:watch": "PLAYWRIGHT_BROWSERS_PATH=browsers tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "lint": "eslint src .",
    "test": "PLAYWRIGHT_BROWSERS_PATH=browsers jest --runInBand",
    "test:cov": "npm test -- --coverage",
    "prepare": "husky install",
    "release": "release-it --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JorgeLNJunior/game-price-alert.git"
  },
  "author": "JorgeLNJunior",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JorgeLNJunior/game-price-alert/issues"
  },
  "homepage": "https://github.com/JorgeLNJunior/game-price-alert#readme",
  "dependencies": {
    "@fastify/compress": "^6.2.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.5.0",
    "bullmq": "^3.10.1",
    "cron": "^2.2.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.14.1",
    "kysely": "^0.23.5",
    "mysql2": "^3.2.0",
    "pino": "^8.11.0",
    "playwright": "^1.31.2",
    "pm2": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.12.2",
    "tsyringe": "^4.7.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/cron": "^2.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^40.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "pino-pretty": "^9.4.0",
    "prettier": "2.8.4",
    "release-it": "^15.8.0",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.3",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
